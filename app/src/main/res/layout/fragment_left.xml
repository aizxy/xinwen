<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@drawable/bg_slidingmenu_left">

    <RelativeLayout
        android:id="@+id/rl_left_news"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#33c85555"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView1"
            android:background="@drawable/biz_navigation_tab_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView1"
            android:text="新闻"
            android:textSize="18sp"
            android:textColor="#99ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="NEWS"
            android:textColor="#99ffff"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignBottom="@id/imageView1"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left_favorit"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#33c85555"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:background="@drawable/biz_navigation_tab_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:text="收藏"
            android:textSize="18sp"
            android:textColor="#99ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="read"
            android:textColor="#99ffff"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignBottom="@id/imageView2"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left_local"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#33c85555"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView3"
            android:background="@drawable/biz_navigation_tab_local_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView3"
            android:text="本地"
            android:textSize="18sp"
            android:textColor="#99ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="LOGCAL"
            android:textColor="#99ffff"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignBottom="@id/imageView3"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left_pic"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#33c85555"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView4"
            android:background="@drawable/biz_navigation_tab_pics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView4"
            android:text="图片"
            android:textSize="18sp"
            android:textColor="#99ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="PHOTO"
            android:textColor="#99ffff"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignBottom="@id/imageView4"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_left_talk"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#33c85555"
        android:paddingTop="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView5"
            android:background="@drawable/biz_navigation_tab_ties"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView5"
            android:text="讨论"
            android:textSize="18sp"
            android:textColor="#99ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="TIES"
            android:textColor="#99ffff"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignBottom="@id/imageView5"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
