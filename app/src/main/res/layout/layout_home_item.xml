<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_home_icon"
        android:background="@drawable/ic_title_home_default"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tv_home_title"
        android:text="title"
        android:singleLine="true"
        android:layout_toRightOf="@+id/iv_home_icon"
        android:layout_alignTop="@+id/iv_home_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_home_summary"
        android:singleLine="true"
        android:layout_alignLeft="@+id/tv_home_title"
        android:layout_alignBottom="@+id/iv_home_icon"
        android:text="summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_home_stamp"
        android:text="stamp"
        android:singleLine="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_below="@id/tv_home_summary"
        android:layout_height="wrap_content" />
</RelativeLayout>