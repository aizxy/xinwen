<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    android:layout_height="match_parent">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:id="@+id/rl_right_user"
       android:visibility="gone"
       android:layout_centerHorizontal="true"
       android:layout_height="wrap_content"
       android:layout_marginTop="52dp">
       <ImageView
           android:id="@+id/iv_loginedImageView"
           android:layout_centerHorizontal="true"
           android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
           android:layout_width="80dp"
           android:layout_height="80dp" />
       <TextView
           android:id="@+id/tv_loginedUsername"
           android:textColor="#ffffff"
           android:textSize="25sp"
           android:layout_marginTop="22dp"
           android:layout_centerHorizontal="true"
           android:layout_below="@+id/iv_loginedImageView"
           android:text="丫丫已经登陆"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/rl_right_default"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp">
        <ImageView
            android:id="@+id/iv_loginImageView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/biz_pc_main_info_profile_avatar_bg_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_loginTextView"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_marginTop="22dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/iv_loginImageView"
            android:text="立即登陆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <LinearLayout
        android:paddingBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_update"
            android:text="版本更新"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:background="@drawable/share_little_bg"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/fun_weixin"
                android:layout_weight="1"
                android:src="@drawable/fun_share_weixin"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/fun_qq"
                android:src="@drawable/addimport_qq"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <ImageView
                android:id="@+id/fun_friends"
                android:src="@drawable/fun_share_friends"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/fun_weibo"
                android:src="@drawable/fun_share_weibo"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
