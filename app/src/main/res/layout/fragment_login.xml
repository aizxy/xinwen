<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <com.example.administrator.happyapplication.view.MyEditText
            android:id="@+id/et_loginName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名" />

        <com.example.administrator.happyapplication.view.MyEditText
            android:id="@+id/et_loginPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="请输入用户密码"
            android:password="true" >
        </com.example.administrator.happyapplication.view.MyEditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_login_regist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_btn_normal"
            android:text="注册"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/login_btn_normal"
            android:text="登陆"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_login_forgetpass"
        android:text="忘记密码？"
        android:textSize="18sp"
        android:textColor="#ec0909"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
